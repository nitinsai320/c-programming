  #include<stdio.h>
  main ()
  {
int rows,column,spaces;
    printf("Enter the number of rows");
    scanf(" %d", &rows);
    for(int i=0; i<rows; i++)
    {
        for(int l=0;l<rows-1-i;l++)
        {
            printf(" ");
        }
        for(int j=0; j<=i;j++)
        {
            printf("%c ",'*');
        }
        printf("\n");
    }
    printf("\n");
}
